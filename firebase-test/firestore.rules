rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    match /categories/{document=**} {
      allow read: if true;
      allow write: if false;
  	}
    
    match /remedies/{document=**} {
      allow read: if true; // TODO: Allow all remedies not to be read by user.
      allow write: if false;
  	}
    
    match /content/{document=**} {
    	allow read: if true;
      allow write: if false;
    }
    
    match /tools/tarotdecks/{document=**} {
    	allow read: if true;
      allow write: if false;
    }
    
    match /tools/mokshapat/cells/{document=**} {
    	allow read: if true;
      allow write: if false;
    }
    
    match /faqs/{document=**} {
      allow read: if true;
      allow write: if false;
  	}

    // Allow experts to read orders across all users (collection group query)
    match /{path=**}/orders/{orderId} {
      allow read: if request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.uid == resource.data.expertId
      );
      allow update: if request.auth != null && request.auth.uid == resource.data.expertId
        && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'statusUpdateTime', 'profileId', 'sessionStartedAt', 'moves', 'sessionCompletedAt', 'cardsDrawn', 'remedies']));
      allow delete: if false;
    }
    
    match /users/{userId} {
      // User can read all their data except wallet_balances update (backend only)
      allow read: if (request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true));
      // User can update their data BUT NOT wallet_balances (backend-only field)
      allow update: if (request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true)) 
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['wallet_balances']);
      // User can create their document BUT NOT with wallet_balances (backend-only field)
      allow create: if request.auth != null && request.auth.uid == userId 
        && !('wallet_balances' in request.resource.data);
      allow delete: if false;
      
      match /coupons/{couponId} {
      	allow read: if request.auth != null && (request.auth.uid == userId || request.auth.uid in resource.data.userIdsAllowed);
        allow create: if false;
        allow update: if (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isScratched']));
        allow delete: if false;
      }
      
      // Wallet transactions - user and admin can read, backend writes only
      match /wallet_transactions/{transactionId} {
        // Allow reading individual documents
        allow get: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
        // Allow list queries (for orderBy, etc.)
        allow list: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
        allow write: if false; // Only backend can write
      }
      
      // Expert-specific wallets - user can read their own, backend writes only
      match /expert_wallets/{expertId} {
        allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
        allow write: if false; // Only backend can write

        // Transactions within expert wallet (includes recharges and deductions)
        match /transactions/{transactionId} {
          allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
          allow write: if false; // Only backend can write
        }
      }

      match /orders/{orderId} {
      	allow read: if request.auth != null && request.auth.uid == userId;
        // Allow profile ID updates for all order types
        // For ON_DEMAND_CONSULTATION orders, only backend can modify (handled by checking type)
        allow write: if request.auth != null 
          && (request.auth.uid == userId || request.auth.token.admin == true || request.auth.uid == resource.data.expertId) 
          && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['profileId']))
          && resource.data.type != 'ON_DEMAND_CONSULTATION';
        allow delete: if false;
      }
      
      match /addresses/{addressId} {
      	allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
        allow delete: if false;
      }
      
      match /profiles/{profileId} {
        allow read: if request.auth != null && request.auth.uid == userId || request.auth.token.admin == true;
        allow create: if request.auth != null && request.auth.uid == userId || request.auth.token.admin == true;
        allow update: if request.auth != null && request.auth.uid == userId || request.auth.token.admin == true;
        allow delete: if false;
      }
      
      match /public/{document=**} {
      // Remove coupons from public?
        allow read: if true;
        // Allow updates to expert_status by the expert themselves
        allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      }
      
      // Platform fee config - separate document (expert and admin can read, admin can write)
      match /platform_fee_config/{document=**} {
        allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
        allow write: if request.auth != null && request.auth.token.admin == true;
      }
      
      // Private subcollection - no access to anyone
      match /private/{document=**} {
        allow read: if false;
        allow write: if false;
      }
      
      match /plans/{document=**} {
      	allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}